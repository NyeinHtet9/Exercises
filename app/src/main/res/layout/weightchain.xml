<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button

        android:id="@+id/btnOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="One"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnTwo"/>

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Two"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintLeft_toRightOf="@+id/btnOne"
        app:layout_constraintRight_toLeftOf="@+id/btnThree"
        />

    <Button

        android:id="@+id/btnThree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Three"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintLeft_toRightOf="@+id/btnTwo"
        app:layout_constraintRight_toRightOf="parent"

        />


    <Button

        android:id="@+id/btnOne1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="One"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="50dp"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnTwo"

        />

    <Button
        android:id="@+id/btnTwo1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Two"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintHorizontal_weight="2"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnOne1"
        app:layout_constraintRight_toLeftOf="@+id/btnThree1"
        />

    <Button

        android:id="@+id/btnThree1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Three"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintHorizontal_weight="6"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnTwo1"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button

        android:id="@+id/btnOne2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="One"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="100dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnTwo2"
        />

    <Button
        android:id="@+id/btnTwo2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Two"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintTop_toBottomOf="@+id/btnOne2"
        app:layout_constraintBottom_toTopOf="@+id/btnThree2"
        />

    <Button

        android:id="@+id/btnThree2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Three"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintVertical_weight="3"
        app:layout_constraintTop_toBottomOf="@+id/btnTwo2"
        app:layout_constraintBottom_toBottomOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>

